{
  "name": "fantasy-console",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "watch:wasm": "nodemon --watch src --ext 'rs' --exec npm run build:wasm--dev",
    "build:wasm": "wasm-pack build",
    "build:wasm--dev": "npm run build:wasm -- --profiling",
    "build:wasm--release": "npm run build:wasm -- --release --no-default-features",
    "preview": "vite preview"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "sass": "^1.74.1",
    "typescript": "^5.0.2",
    "vite": "^5.0.0",
    "vite-plugin-top-level-await": "^1.4.1",
    "vite-plugin-wasm": "^3.3.0",
    "vite-tsconfig-paths": "^4.3.2",
    "wasm-pack": "^0.12.1"
  }
}
