{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@fantasy-console/core": ["../core/src"],
      "@fantasy-console/core/*": ["../core/src/*"],
    },

    /* Linting */
    "strict": true,
  },
  "include": ["src/**/*.ts"]
}
